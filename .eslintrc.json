{
    "parser": "vue-eslint-parser",
    "root": true,    
    "env": {
        "browser": true,
        "node": true        
    },
    "plugins": ["@vue"],
    "rules": {
        "indent": ["error", 2],
        "no-undef": "error",
        "no-unreachable": "warn",
        "no-unused-vars": "warn",
        "no-cond-assign": "warn",
        "no-dupe-args": "error",
        "no-dupe-keys": "error",
        "no-duplicate-case": "error",
        "comma-spacing": "warn",
        "no-implicit-globals": "warn",
        "no-octal": "warn",
        "block-spacing": "warn",
        "key-spacing": ["warn"]
    },
    "parserOptions": {
        "ecmaVersion": 2015,
        "sourceType": "module"
    },
    "globals": {
        "process": true
    },    
    "extends": [
        "plugin:vue/vue3-essential",
        "eslint:recommended",
        "@vue/typescript/recommended",
        "@vue/prettier",
        "@vue/prettier/@typescript-eslint"
      ]
}