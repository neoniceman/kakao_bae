{
    "parser": "@typescript-eslint/parser",
    "env": {
        "browser": true
    },
    "rules": {
        "indent": ["warn", "tab", {"SwitchCase": 1}],
        "no-undef": "error",
        "no-unreachable": "warn",
        "no-unused-vars": "warn",
        "no-cond-assign": "warn",
        "no-dupe-args": "error",
        "no-dupe-keys": "error",
        "no-duplicate-case": "error",
        "comma-spacing": "warn",
        "no-implicit-globals": "warn",
        "no-octal": "warn",
        "block-spacing": "warn",
        "key-spacing": ["warn"]
    },
    "parserOptions": {
        "ecmaVersion": 2015,
        "sourceType": "module"
    },
    "globals": {
        "process": true
    },    
    "extends": ["plugin:@typescript-eslint/recommended"]
}